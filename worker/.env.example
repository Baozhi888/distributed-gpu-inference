# ===========================================
# GPU Worker 环境配置
# ===========================================
# 复制此文件为 .env 并填入实际值
# cp .env.example .env

# ========== 服务器连接 ==========
# 中央服务器地址（必填）
GPU_SERVER_URL=https://gpu-inference.example.com

# 服务器连接超时（秒）
GPU_SERVER_TIMEOUT=30

# 是否验证SSL证书（生产环境建议true）
GPU_SERVER_VERIFY_SSL=true

# ========== Worker身份 ==========
# Worker ID（首次注册后自动填充，通常不需要手动设置）
# GPU_WORKER_ID=

# 认证Token（首次注册后自动填充）
# GPU_WORKER_TOKEN=

# Worker名称（可选，用于在管理界面识别）
GPU_WORKER_NAME=My-GPU-Worker

# ========== 地理位置 ==========
# 区域代码（重要：影响任务调度）
# 可选值: asia-east, asia-south, europe-west, europe-east,
#         america-north, america-south, oceania
GPU_REGION=asia-east

# 国家/城市（可选，用于更精确的调度）
GPU_COUNTRY=China
GPU_CITY=Shanghai
GPU_TIMEZONE=Asia/Shanghai

# ========== GPU配置 ==========
# GPU设备ID（多GPU时指定使用哪个）
GPU_DEVICE_ID=0

# 是否启用CPU Offload（显存不足时将部分计算迁移到CPU）
GPU_ENABLE_CPU_OFFLOAD=true

# 最大显存使用限制（GB，空=不限制）
# GPU_MAX_MEMORY_GB=20

# ========== 任务类型 ==========
# 支持的任务类型（逗号分隔）
GPU_SUPPORTED_TYPES=llm,image_gen

# ========== 模型配置 ==========
# LLM模型
GPU_LLM_MODEL=Qwen/Qwen2.5-7B-Instruct

# 图像生成模型
GPU_IMAGE_MODEL=black-forest-labs/FLUX.1-schnell

# Whisper模型（语音识别）
# GPU_WHISPER_MODEL=openai/whisper-large-v3

# Embedding模型
# GPU_EMBEDDING_MODEL=BAAI/bge-large-zh-v1.5

# ========== 负载控制 ==========
# 任务接受率（0.1-1.0，1.0=接受全部任务）
GPU_ACCEPTANCE_RATE=1.0

# 最大并发任务数
GPU_MAX_CONCURRENT_JOBS=1

# 每小时最大任务数（0=不限制）
GPU_MAX_JOBS_PER_HOUR=0

# 工作时间段（24小时制，不设置=全天接受任务）
# GPU_WORKING_HOURS_START=9
# GPU_WORKING_HOURS_END=22

# ========== 直连模式（可选）==========
# 是否启用直连（允许客户端直接连接此Worker）
GPU_DIRECT_ENABLED=false

# 直连监听地址
GPU_DIRECT_HOST=0.0.0.0
GPU_DIRECT_PORT=8080

# 公网可访问地址（启用直连时需要设置）
# GPU_DIRECT_PUBLIC_URL=http://your-public-ip:8080

# ========== 高级配置 ==========
# 心跳间隔（秒）
GPU_HEARTBEAT_INTERVAL=30

# 任务轮询间隔（秒）
GPU_POLL_INTERVAL=2

# 日志级别（DEBUG, INFO, WARNING, ERROR）
GPU_LOG_LEVEL=INFO

# HuggingFace镜像（中国用户推荐设置）
# HF_ENDPOINT=https://hf-mirror.com
